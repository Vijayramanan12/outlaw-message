# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-256-bit-key-here
FLASK_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/outlaw_telegraph

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# Voice Authentication Settings
VOICE_SIMILARITY_THRESHOLD=0.7
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=30

# Security Settings
RATE_LIMIT_PER_MINUTE=60

# Optional: Redis for caching and sessions
REDIS_URL=redis://localhost:6379/0

# Optional: Email settings (for future features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Optional: Cloud storage (for file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=outlaw-telegraph-files